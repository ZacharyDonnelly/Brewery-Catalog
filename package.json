{
  "name": "brewery-catalog",
  "version": "1.0.0",
  "author": "Zachary Donnelly",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "apollo-datasource-rest": "^3.6.1",
    "apollo-link-rest": "^0.9.0-rc.1",
    "apollo-server": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "graphql-anywhere": "^4.2.7",
    "graphql-request": "^4.3.0",
    "qs": "^6.10.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-spring": "^9.4.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently 'yarn' 'react-scripts start' 'yarn start:server'",
    "start:server": "cd server && nodemon --config nodemon.json index.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint:eslint": "eslint --fix --ignore-path .gitignore --ext .js, .jsx",
    "lint:prettier": "prettier --write --loglevel warn \"**/*.{js,json,jsx,scss}\"",
    "lint:stylelint": "stylelint --config ./.stylelint.config.js \"**/*.{css,scss}\" --fix",
    "clean": " yarn cache clean && rimraf node_modules"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "chalk": "^5.0.1",
    "classnames": "^2.3.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.52.3",
    "scriptlint": "^2.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "scriptlint": {
    "root": true,
    "rules": {
      "uses-allowed-namespace": false
    }
  }
}
